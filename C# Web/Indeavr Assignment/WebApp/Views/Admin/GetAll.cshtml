@model IEnumerable<WebApp.Data.Entities.Game>
<partial name="_AdminBar">

    <div>
        <h1>All games!</h1>
        @foreach (var game in Model)
        {
            <p>Title : @game.Title</p>
            <p>Description : @game.Description</p>
            <p>Price : @game.Price</p>
            <p>ReleasedOn : @game.ReleaseDate</p>
            <img src="@game.ImageURL" alt="Image" />

            <div>
                <form asp-controller="Admin" asp-action="UpdateGame" method="post">
                    <input type="hidden" name="id" value="@game.Id" />
                    <p>New Title:</p>
                    <input type="text" name="title" value="" />
                    <p>New Description:</p>
                    <input type="text" name="description" value="" />
                    <p>New Price:</p>
                    <input type="number" name="price" value="" />
                    <p>New Released On:</p>
                    <input type="datetime" name="releasedOn" value="" />
                    <p>New Image URL:</p>
                    <input type="text" name="imageURL" value="" />
                    <br />
                    <input type="submit" name="Submit" value="Update" />
                    <hr />
                </form>
            </div>
            <br />
            <div>
                <form asp-controller="Admin" asp-action="DeleteGame" method="post">
                    <input type="hidden" name="id" value="@game.Id" />
                    <input type="submit" name="Submit" value="Delete" />
                </form>
            </div>
            <br />
            <br />
            <br />
            <br />
            <hr />

        }
    </div>