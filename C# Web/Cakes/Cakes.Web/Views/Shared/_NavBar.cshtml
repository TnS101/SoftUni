@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
 }
<!DOCTYPE html>
<html lang="en-US">

<head itemscope itemtype="http://schema.org/WebSite">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="profile" href="http://gmpg.org/xfn/11">
    <link rel="pingback" href="http://buythecake.local/xmlrpc.php">

    <title>BuyTheCake</title>
    <link rel='dns-prefetch' href='//fonts.googleapis.com' />
    <link rel='dns-prefetch' href='//s.w.org' />
    
    <style type="text/css">
        img.wp-smiley,
        img.emoji {
            display: inline !important;
            border: none !important;
            box-shadow: none !important;
            height: 1em !important;
            width: 1em !important;
            margin: 0 .07em !important;
            vertical-align: -0.1em !important;
            background: none !important;
            padding: 0 !important;
        }
    </style>

    <link rel='stylesheet' id='bakes-and-cakes-style-css' href='~/css/Example.css' type='text/css' media='all' />
   
</head>

<body class="home page-template-default page page-id-32 logged-in admin-bar no-customize-support custom-background custom-background-image custom-background-color full-width" itemscope itemtype="http://schema.org/WebPage">
    <div id="page" class="site">
        <a class="skip-link screen-reader-text" href="#acc-content"></a>
        <header id="masthead" class="site-header" role="banner" itemscope itemtype="http://schema.org/WPHeader">
            <div class="header-t">
                <div class="container">
                    <div class="site-branding" itemscope itemtype="http://schema.org/Organization">
                        <div class="text-logo">
                            <h1 class="site-title" itemprop="name"><a class="main-title" asp-controller="Home" asp-action="index">Buy The Cake</a></h1>
                            <p class="site-description" itemprop="description">Enjoy our Awesome Cakes</p>
                        </div>
                    </div>
                    <div class="menu-opener">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>

            <nav id="site-navigation" class="main-navigation" role="navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
                <div id="primary-menu" class="menu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="index"><i class="fas fa-birthday-cake"></i></a> <text class="menuText">Home</text></li>
                        <li><a asp-controller="Cake" asp-action="Add"><i class="far fa-clock"></i></a> <text class="menuText">Order Cake</text></li>
                        <li><a asp-controller="Cake" asp-action="Cart"><i class="fas fa-shopping-cart"></i></a> <text class="menuText">Shopping Cart</text></li>
                        <li><a asp-controller="Home" asp-action="About"><i class="far fa-question-circle"></i></a> <text class="menuText">About us</text></li>
                        <li><a asp-controller="Forum" asp-action="Home"><i class="fas fa-book-open"></i></a> <text class="menuText">Forum</text></li>
                    </ul>
                </div>
            </nav>
        </header>
    </div>
</body>
</html>