@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Application.Employees.Queries.EmployeesListViewModel
@{
    ViewData["Title"] = "About";
}
<head>
    <title>About Us</title>
    <partial name="_NavBar">
</head>
<body class="page-template-default page page-id-43 logged-in admin-bar custom-background custom-background-image custom-background-color full-width customize-support about-body">
    <div id="acc-content">
        <div class="container">
            <div id="content" class="site-content about-site-content">
                <div id="primary" class="content-area">
                    <main id="main" class="site-main" role="main">
                        <article id="post-9" class="post-9 page type-page status-publish hentry">
                            <div class="text-holder about-text-holder">
                                <div class="entry-content" itemprop="text">
                                    <p class="about-paragraph">Meet our employees!</p>
                                    <hr />
                                    @{
                                        foreach (var employee in Model.Employees)
                                        {
                                            <p>@employee.Name (@employee.Position)</p>

                                            <img src="@employee.ImageURL" width="300" height="300">
                                            <hr />
                                        }
                                    }
                                </div>
                            </div>
                        </article>
                    </main>
                </div>
            </div>
        </div>
    </div>

</body>
<footer>
    <partial name="_Footer">
</footer>
