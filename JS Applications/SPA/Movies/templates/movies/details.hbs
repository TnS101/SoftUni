<div class="container">
    {{> header}}
    <div id="detailsMovie">
            <h1>Details</h1>
            <div class="movie">
                <h2>Title: {{name}}</h2>
                <img src="{{image}}">
                <p>{{description}}</p>
                <h2>Genres</h2>
                <ul class="genres">
                    <li>{{genres}}</li>
                </ul>
                <p>Available Tickets: {{tickets}}</p>
                <button><a href="#/buy">Buy Ticket</a></button>
            </div>
        </div>
</div>


        {{>footer}}